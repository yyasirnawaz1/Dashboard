
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts/_NewsletterLayout.cshtml";

}
<div class="content">
    <div class="row">
        <div class="card" style="width:100%">
            <div class="card-header bg-white header-elements-inline">
                <h6 class="card-title font-variant-smallCaps">Subscribers</h6>
                <div class="header-elements">
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="subscriberTable" class="table table-striped table-hover table-checkable order-column"></table>
                    </div>

                </div>
            </div>
        </div>
    </div>




    <div id="modifySubscription" class="modal" tabindex="-1" data-width="400" data-keyboard="false" role="dialog" aria-labelledby="modifySubscription" aria-hidden="true" data-backdrop="static">
        <div id="modifySubscriptionContainer">

        </div>
    </div>


</div>


@*do not delete below div. being used as template*@
<div id="div_template" style="display:none">
    <div id="div_grid_actions">
        <div class="btn-group">

            <div class="list-icons">
                <div class="dropdown">
                    <a href="#" class="list-icons-item" data-toggle="dropdown">
                        <i class="icon-menu9"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="#" onclick="Subscription.toggleSubscription('@Url.Action("ToggleStatus", "Subscribers", new {  Id="__prm_id__" })')" class="dropdown-item"><i class="icon-shuffle"></i> Toggle</a>
                        @*<a href="#" onclick="Subscription.modifySubscription('@Url.Action("Edit", "Subscribers",new { Id= "__prm_id__" })');" data-target="#modifySubscription" data-toggle="modal" class="dropdown-item"><i class="icon-pencil7"></i> Modify</a>*@
                        <a href="#" onclick="Subscription.deleteSubscription('@Url.Action("Delete", "Subscribers",new { Id="__prm_id__" })');" class="dropdown-item"><i class="icon-x"></i> Delete</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script>
        $('#dashBoard').removeClass("active");
        $('#subscriber').removeClass("active");
        $('#newsLetter').removeClass("active");
        $('#scheduledNewsLetters').removeClass("active");
        $('#subscriber').addClass("active");
    </script>

    <script src="~/Resources/theme/js/vendor/datatables/jquery.dataTables.min.js"></script>

    <script src="~/Resources/theme/js/vendor/datatables.net/js/DataTables-1.10.18/js/dataTables.bootstrap.js"></script>
    @*<script src="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>*@

    <script src="~/ScriptsView/Subscribers.js?version=5"></script>
}
