
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-body">
    <ul class="nav nav-tabs nav-tabs-highlight" id="Tabs">
        <li id="tab-todayAppointment" class="nav-item" style="display:none;">
            <a href="#todayAppointment" class="nav-link" data-toggle="tab" aria-expanded="true">Today's Appointment <span onclick="HomeLayout.closeTab('todayAppointment')" class="close tabCrossButton">×</span></a>
        </li>
        <li id="tab-searchPatient" class="nav-item" style="display:none;">
            <a href="#searchPatient" class="nav-link" data-toggle="tab" aria-expanded="true">Search Patient <span onclick="HomeLayout.closeTab('searchPatient')" class="close tabCrossButton">×</span></a>
        </li>
        <li id="tab-pendingForms" class="nav-item" style="display:none;">
            <a href="#pendingForms" class="nav-link" data-toggle="tab" aria-expanded="false">Pending Forms <span onclick="HomeLayout.closeTab('pendingForms')" class="close tabCrossButton">×</span></a>
        </li>
        <li id="tab-pendingSurveys" class="nav-item" style="display:none;">
            <a href="#pendingSurveys" class="nav-link" data-toggle="tab" aria-expanded="false">Pending Surveys <span onclick="HomeLayout.closeTab('pendingSurveys')" class="close tabCrossButton">×</span></a>
        </li>
    </ul>
    <div class="tab-content tab-content-bordered">
        <div id="nodataDiv" class="noDataRecord">
            @*<span>Please select an office.</span>*@
        </div>
        <div class="tab-pane fade" id="todayAppointment">

            <partial name="~/Views/Home/_TodayAppointmentPartial.cshtml" />
        </div>
        <div class="tab-pane fade" id="searchPatient">
            <partial name="~/Views/Home/_SearchPatientPartial.cshtml" />
        </div>
        <div class="tab-pane fade" id="pendingForms">
            <partial name="~/Views/Home/_PendingFormsPartial.cshtml" />
        </div>
        <div class="tab-pane fade" id="pendingSurveys">
            <partial name="~/Views/Home/_PendingSurveysPartial.cshtml" />
        </div>
    </div>

    <div class="modal fade" id="modalPrivateSurveys" tabindex="-1" role="dialog" aria-labelledby="modal-default-header" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content block minModelSize">
                <div class="modal-header">
                    <h4 class="modal-title" id="renderSurveysModal-header">Surveys</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="block-divider"></div>
                <div class="modal-body">
                    <table id="tblPrivateSurveys" class="table table-striped table-bordered datatable-extended" style="width:100%">
                        <thead>
                            <tr>
                                <th>Patient Name</th>
                                <th>System Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalPrivateForms" tabindex="-1" role="dialog" aria-labelledby="modal-default-header" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content block minModelSize">
                <div class="modal-header">
                    <h4 class="modal-title" id="renderSurveysModal-header">Forms</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="block-divider"></div>
                <div class="modal-body">
                    <table id="tblPrivateForms" class="table table-striped table-bordered datatable-extended" style="width:100%">
                        <thead>
                            <tr>
                                <th>Patient Name</th>
                                <th>System Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>
@section scripts{
    <script src="~/Resources/theme/js/vendor/datatables.net/js/datatables.min.js"></script>
    <script src="~/Scripts/Home/TodayAppointment.js"></script>
    <script src="~/Scripts/Home/SearchPatient.js"></script>
    <script src="~/Scripts/Home/PendingForms.js"></script>
    <script src="~/Scripts/Home/PendingSurveys.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.daterange-basic').daterangepicker({
                applyClass: 'bg-slate-600',
                cancelClass: 'btn-light'
            });
        });

    </script>
}
