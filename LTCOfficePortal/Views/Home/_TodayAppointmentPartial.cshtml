<div class="row card">
    <div class="col-md-12">
        <div class="block block-condensed noWhite">
            <div class="block-content">
                <div class="row row-margin">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <button title="Refresh" class="btn btn-primary pull-right" onclick="TodayAppointmentParent.refreshTable();">
                                    <i class="icon-database-refresh"></i>
                                </button>
                                <div id="todayRange" class="dateSelector input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-calendar22"></i></span>
                                    </span>
                                    <input id="todayRangeControl" type="text" class="form-control daterange-basic">
                                </div>

                                <select class="bs-select form-control dateSelector multiSelect" multiple id="ddlShowHideColumn" name="ddlShowHideColumn" onchange="TodayAppointmentParent.showHideColumn();">
                                    <option value="5">Description</option>
                                    <option value="6">Home #</option>
                                    <option value="7">Cell #</option>
                                </select>

                                <select class="bs-select form-control dateSelector multiSelect" multiple id="ddlProviders" name="ddlProviders" onchange="TodayAppointmentParent.onProvidersDDLChange()"></select>
                            </div>
                        </div>
                        <table id="tblTodayAppointment" class="table table-striped table-bordered datatable-extended" style="width:100%">
                            <thead>
                                <tr>
                                    @*<th>Account#</th>*@
                                    <th>Pr.</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Name</th>
                                    <th>Job</th>
                                    <th>Description</th>
                                    <th>Home#</th>
                                    <th>Cell#</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



